<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DisplayActivity">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <TextView
        android:id="@+id/displaystudent_id"
        android:layout_width="400dp"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:text="Student Id"
        android:textSize="20dp"
        />



    <TextView
        android:id="@+id/displayname_id"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Name"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/displayaddress_view"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Address"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/displaycontact_view"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Contact Number"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/displayemail_view"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Email:"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/displaydob_view"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Date of Birth:"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/displayreg_view"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Registration Status:"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/displayreg_fee"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Registration Fee:"
        android:textSize="20dp"
        />


  </LinearLayout></ScrollView>